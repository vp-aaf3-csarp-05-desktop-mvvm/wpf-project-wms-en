<Window x:Class="VMSProjekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VMSProjekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:EmployeeViewModel />
    </Window.DataContext>
    <StackPanel Orientation="Vertical">
        <Label>Név:</Label>
        <TextBlock Text="{Binding Name}"></TextBlock>
        <Label>Adószáma:</Label>
        <TextBlock Text="{Binding TaxID}"></TextBlock>
        <Label>Még nem kiadott napok száma:</Label>
        <TextBlock Text="{Binding FreeDays}"></TextBlock>
    </StackPanel>
</Window>

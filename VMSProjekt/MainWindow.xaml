<Window x:Class="VMSProjekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VMSProjekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:EmployeeViewModel />
    </Window.DataContext>
    <WrapPanel>
        <Border BorderBrush="Black" 
                BorderThickness="1.2"
                CornerRadius="10"
                Padding="4"
                Margin="4"
                >
            <StackPanel Orientation="Vertical">
                <Label FontWeight="Bold">Név:</Label>
                <TextBlock Text="{Binding Name}" Margin="5 0 0 0"></TextBlock>
                <Label FontWeight="Bold">Adószáma:</Label>
                <TextBlock Text="{Binding TaxNumber}" Margin="5 0 0 0"></TextBlock>
                <Label FontWeight="Bold">Kivett szabadnapok száma:</Label>
                <TextBlock Text="{Binding DaysOff}" Margin="5 0 0 0"></TextBlock>
            </StackPanel>
        </Border>
    </WrapPanel>
</Window>
